<div id="profile">

	<h2>Profil Liste</h2>

	<table id="tableID">
		<tr>
		
			<th>
				UserName
			</th>
			<th>
				Rasse
			</th>
			<th>
				Level
			</th>
			<th>
				SiegQuote
			</th>
			<th></th>
			<th></th>
			<th></th>
		
		</tr>
		<% @u.each do |user| %>
		<tr>
				<td>
					<%= link_to user.nick, "/profile/show/#{user.id}" %>
				</td>
					<% unless user.fish_id.nil? %>
						<td>
							<%= getRaceName (Fish.find user.fish_id).race %>
						</td>
						<td>
							<%= (Fish.find user.fish_id).lvl %>
						</td>
					<% else %>
						<td>
							Kein Fisch
						</td>
						<td>
							0
						</td>
					<% end %>
				<td>
					<% unless (user.win + user.lose) == 0 %>
						<%= (user.win.to_f / (user.win + user.lose)).round_to(3) %>
					<% else %>
						<%= 0 %>
					<% end %>
				</td>
				<td>
					<% unless current_user.id == user.id || user.fish_id.nil? || current_user.fish_id.nil? %>
						<%= link_to "Angreifen", "/fight/show/#{user.id}" %>
					<% end %>
				</td>
				<td>
					<% if user.isAdmin %>
						<code><%= "Admin" %></code>
					<% end %>
				</td>
				<td>
					<% if current_user.isAdmin == true %>
						<% if user.isAdmin == false %>
							<%= link_to "User entfernen", "/profile/delete/#{user.id}", :confirm => "User wirklich lÃ¶schen?" %>
						<% end %>
					<% end %>
				</td>
		</tr>
		<% end %>
	</table>

</div>
