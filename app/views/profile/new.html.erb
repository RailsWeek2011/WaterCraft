<div id = "profile">

	<h2>WÃ¤hle deinen Fisch</h2>
	
	<form action = "create" method = "get">
		<div id = "fisch_nick">
			Name deines Fisches: <input type = "text" name = "nick" >
		</div>
		<div id = "Bilder" >
			
				<% @entries.each do |e| %>
	
					<div id = "element">
						<%= image_tag "#{e}", :height => 150, :id => "Bild" %><br>
						<% e["Fisch/"] = "" %>
						<% e[".jpg"] = "" %>
						<input type="radio" name="race" value="<%=e.to_i %>"> <%= getRaceName(e.to_i) %>
					</div>
			
				<% end %>
		</div>
		<div id = "submit">
		<input type = "submit" id="button" >
		</div>
	</form>
	
</div>
