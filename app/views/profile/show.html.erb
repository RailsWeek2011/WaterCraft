<div id="profile">
<h3><%= @profil.nick %>s Profil</h3>

<div id="profile_body">
	<div id="img">
		<%= image_tag "rails.png"%>
	</div>
	<div>
		<table id="tableID">
			<colgroup>
				<col>
				<col>
			</colgroup>
			<tr>
				<th>Nick</th>
				<td><%= @profil.nick %></td>
			</tr>
			<tr>
				<th>Kämpfe</th>
				<td><%= @anz %></td>
			</tr>
			<tr>
				<th>
					Siege
				</th>
				<td>
					<%= @profil.win %>
				</td>
				<th>
					Niederlagen
				</th>
				<td>
					<%= @profil.lose %>
				</td>
			</tr>
			<tr>
				<th>
					Ratio
				</th>
				<td>
					<% unless @anz == 0 %>
						<%= @profil.win / @anz %>
					<% else %>
						<%= 0 %>
					<% end %>
				</td>
			</tr>
		</table>
	</div>
</div>
<br />

<% unless @profil.fish_id.nil? %>

<h3><%= @profil.nick %>s Fisch</h3>
<div id="userfish">
	<div id="fishimg">
		<%= image_tag "rails.png" %>
	</div>
	<div>
		<table id="tableID">
			<colgroup>
				<col>
				<col>
			</colgroup>
			<tr>
				<th>Name</th>
				<td><%= @profil.nick %></td>
			</tr>
			<tr>
				<th>
					Atrribute des Fisches:
				</th>
			</tr>
			<tr>
				<th>Rasse</th>
				<td><%= getRaceName (Fish.find @profil.fish_id).race %></td>
			</tr>
			<tr>
				<th>
					Level
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).lvl %>
				</td>
			</tr>
			<tr>
				<th>
					Erfahrung
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).exp %>
				</td>
			</tr>
			<tr>
				<th>
					Stärke
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).str %>
				</td>
			</tr>
			<tr>
				<th>
					Verteidigung
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).dev %>
				</td>
			</tr>
			<tr>
				<th>
					Kondition
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).con %>
				</td>
			</tr>
			<tr>
				<th>
					Initiative
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).init %>
				</td>
			</tr>
			<tr>
				<th>
					Geschicklichkeit
				</th>
				<td>
					<%= (Fish.find @profil.fish_id).dex %>
				</td>
			</tr>
		</table>
	</div>
</div>

<%	else %>

	<div>
		<%= @profil.nick %> hat keinen Fisch | <%= link_to "Erstelle deinen Fish", "/profile/new" %>
		
	</div>

<% end %>

</div>
